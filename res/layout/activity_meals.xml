<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/easy_meal_layout"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".easyMealsHomeScreen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/easy_meals"
        android:contentDescription="@string/mpicture" />

    <Button
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:id="@+id/left4meals"
        android:text="Schedule"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/left"
        android:contentDescription="@string/lb"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

</RelativeLayout>